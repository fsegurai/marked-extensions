{
  "name": "@fsegurai/marked-extensions",
  "version": "17.0.0-beta.0",
  "description": "Extensions for Marked.js",
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "Fabi√°n Segura",
    "url": "https://www.fsegurai.com/"
  },
  "keywords": [
    "extensions",
    "javascript",
    "library",
    "markdown",
    "markedjs",
    "marked-extended-accordion",
    "marked-extended-alert",
    "marked-extended-comments",
    "marked-extended-embeds",
    "marked-extended-footnote",
    "marked-extended-kanban",
    "marked-extended-lists",
    "marked-extended-slide",
    "marked-extended-spoiler",
    "marked-extended-tables",
    "marked-extended-tabs",
    "marked-extended-timeline",
    "marked-extended-typographic",
    "parser",
    "syntax",
    "typescript"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "bun run clean:packages && bun run clean:demo",
    "clean:packages": "rimraf --glob ./packages/*/dist",
    "clean:demo": "rimraf --glob ./demo/dist ./demo/README.md ./demo/LICENSE",
    "clean:coverage": "rimraf --glob ./coverage",
    "prebuild": "bun run clean",
    "build": "bun run build:packages && bun run build:demo",
    "build:packages": "bun run --filter '*' prepare",
    "build:demo": "rollup -c rollup.config.js",
    "postbuild:demo": "cpy ./README.md ./demo && cpy ./LICENSE ./demo",
    "build:doppler": "doppler run bun run build",
    "build:packages:doppler": "doppler run bun run build:packages",
    "build:demo:doppler": "doppler run bun run build:demo && bun run postbuild:demo",
    "test:all": "bun run --filter '*' test",
    "test:all:coverage": "bun run --filter '*' test:coverage",
    "test:all:update": "bun run --filter '*' test -- --update-snapshots",
    "test:summary": "bun run ./scripts/test-all-packages.ts --summary",
    "test:coverage": "bun test --coverage",
    "test:update": "bun test --update-snapshots",
    "lint": "bun run lint:packages && bun run lint:demo",
    "lint:packages": "eslint ./packages/*/src/**",
    "lint:demo": "eslint ./demo",
    "lint:fix": "bun run lint:packages --fix && bun run lint:demo --fix",
    "dev": "rollup -w -c rollup.config.js",
    "dev:doppler": "doppler run bun run dev",
    "start": "bun run dev",
    "start:doppler": "bun run dev:doppler",
    "utils:helpers": "bun packages/.helper/utils/generate-utils.ts",
    "utils:readme": "bun packages/.helper/docs/generate-readme.ts",
    "utils:versions": "bun packages/.helper/versions/update-packages-versions.ts --write",
    "utils:versions:preview": "bun packages/.helper/versions/update-packages-versions.ts --dry-run"
  },
  "dependencies": {
    "@material/web": "^2.4.1",
    "clipboard": "^2.0.11",
    "github-slugger": "^2.0.0",
    "marked": "^17.0.2",
    "marked-highlight": "^2.2.3",
    "prismjs": "^1.30.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/jsdom": "^27.0.0",
    "@types/prismjs": "^1.26.6",
    "bun-types": "^1.3.9",
    "cpy-cli": "^7.0.0",
    "dotenv": "^17.2.4",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "jsdom": "^28.0.0",
    "rimraf": "^6.1.2",
    "rollup": "^4.57.1",
    "rollup-plugin-dev": "^2.1.0",
    "semantic-release": "^25.0.3",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.55.0"
  }
}
